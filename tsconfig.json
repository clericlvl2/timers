{
	"compilerOptions": {
		"exactOptionalPropertyTypes": true,
		"jsx": "react-jsx",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noUncheckedIndexedAccess": true,
		"noUncheckedSideEffectImports": true,
		"paths": {
			"@app": ["./src/app"],
			"@shared": ["./src/shared"]
		},
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"types": ["node"],
		"verbatimModuleSyntax": true
	}
}
